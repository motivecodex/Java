<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>controllers.UserController</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>IndexController</servlet-name>
        <servlet-class>controllers.IndexController</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>UserEditController</servlet-name>
        <servlet-class>controllers.UserEditController</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>UserDeleteController</servlet-name>
        <servlet-class>controllers.UserDeleteController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>IndexController</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>UserEditController</servlet-name>
        <url-pattern>/user/new</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>UserEditController</servlet-name>
        <url-pattern>/user/edit</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>UserDeleteController</servlet-name>
        <url-pattern>/user/delete</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
